    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'My sexual orientation is'
            font_size: '30dp'
        BoxLayout:
            orientation: 'vertical'
            padding: '10dp'
            spacing: '10dp'
            height: root.height / 2

#:kivy 1.0.9

<NameScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'My Name is'
            font_size: '30dp'
        BoxLayout:
            orientation: 'vertical'
            padding: '10dp'
            spacing: '10dp'
            TextInput:
                font_size: '30dp'
                multiline: False
        BoxLayout:
            orientation: 'horizontal'
            padding: '10dp', '50dp'
            spacing: '10dp'
            Button:
                text: 'Go Back'
                on_press: root.prev_page()
            Button:
                text: 'Continue'
                on_press: root.next_page()

<GenderScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'I am a'
            font_size: '30dp'
        BoxLayout:
            orientation: 'vertical'
            padding: '10dp'
            spacing: '10dp'
            ToggleButton:
                text: 'Woman'
                group: 'sex'
                state: 'down'
            ToggleButton:
                text: 'Man'
                group: 'sex'
            ToggleButton:
                text: 'Other'
                group: 'sex'
        BoxLayout:
            orientation: 'horizontal'
            padding: '10dp', '50dp'
            spacing: '10dp'
            Button:
                text: 'Go Back'
                on_press: root.prev_page()
            Button:
                text: 'Continue'
                on_press: root.next_page()


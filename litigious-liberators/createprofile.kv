            ToggleButton:
                text: 'Bisexual'
            ToggleButton:
                text: 'Asexual'
            ToggleButton:
                text: 'Demisexual'
            ToggleButton:
                text: 'Pansexual'
            ToggleButton:
                text: 'Queer'
            ToggleButton:
                text: 'Bicurious'
            ToggleButton:
                text: 'Aromantic'
        BoxLayout:
            orientation: 'horizontal'
            padding: '10dp', '50dp'
            spacing: '10dp'
            Button:
                text: 'Go Back'
                on_press: root.prev_page()
            Button:
                text: 'Continue'
                on_press: root.next_page()

